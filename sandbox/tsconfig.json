{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "./",
		"sourceMap": true,
		"declaration": false,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"module": "esnext",
		"moduleResolution": "Node",
		"importHelpers": true,
		"target": "es2015",
		"lib": [
			"es2018",
			"dom"
		],
		"paths": {
			"@common/*": ["../server/common/*"],
			"@services/*": ["./src/app/services/*"],
			"@components/*": ["./src/app/components/*"],
			"@app/*": ["./src/app/*"],
		}
	},

	"exclude": ["**/*.orig.*"]
}
